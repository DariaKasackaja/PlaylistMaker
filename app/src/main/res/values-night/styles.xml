<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/yp_blue</item>
        <item name="colorControlNormal">@color/yp_gray</item>
        <item name="android:checked">true</item>
    </style>

    <style name="ButtonStyleWhite" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="cornerRadius">@dimen/radius_button</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsTextViewStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_settings_height</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_setting_size</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextToolbarStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="ToolbarBack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="titleTextColor">?attr/colorPrimaryVariant</item>
        <item name="titleTextAppearance">@style/TextToolbarStyle</item>
        <item name="navigationIcon">@drawable/back</item>
        <item name="navigationIconTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ButtonBackStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">26sp</item>
        <item name="icon">@drawable/back</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="EditTextPlaylistStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_height</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawableStart">@drawable/search</item>
        <item name="android:drawableTint">@color/yp_black</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="BackgroundRectangleStyle">
        <item name="android:background">@drawable/rectangle_edit_night</item>
    </style>

    <style name="UseColorTextStyle">
        <item name="tint">@color/yp_black</item>
    </style>
</resources>